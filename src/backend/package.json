{
  "name": "recr-monkey-backend",
  "version": "1.0.0",
  "description": "Backend API for recr-monkey",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "migrate:better-auth": "npx @better-auth/cli@latest migrate --config src/auth-config.ts -y",
    "migrate:app": "node migrate.js",
    "migrate": "npm run migrate:app && npm run migrate:better-auth",
    "start": "node dist/index.js",
    "startDocker": "npm run migrate && node dist/index.js",
    "dev": "ts-node src/index.ts"
  },
  "dependencies": {
    "@better-auth/cli": "^1.3.29",
    "better-auth": "^1.3.29",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  }
}
